<div class="vendor">
  <table><tr><td>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
  </td><td>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
  </td><td>
  <%= f.label :teacher_name %>
  <%= f.text_field :teacher_name %>
  </td></tr>
  <tr><td colspan=3>
  <h3>Items</h3>
  <div class="nested-level-2">
    <div class="items-container">
      <%= f.nested_fields_for :items, new_item_index: 'new_item_index', show_empty: true, html: { class: "item-form" } do |f| %>
          <% if f %>
          <div class="item">
            <table style="float:left;width: 100%;">
              <tr><td>
              <%= f.label :name %>
            <%= f.text_field :name %>
            </td><td>
            <%= f.label :quantity %>
            <%= f.number_field :quantity, class: 'quantity', onchange:"update_total(this.id);" %>
              </td><td>
                <a href="#" class="item-remove">remove</a>
              </td></tr>
            </table>

            <%= f.hidden_field :id %>
            <%= f.hidden_field :_destroy %>
            <br/>
            <br/>
          </div>
          <% else %>
              <p class="empty">There are no items.</p>
          <% end %>
      <% end %>
    </div>
    <br/>
    <div style="float:right">
      <h5>Total</h5>
      <%= f.text_field :total, readonly: true, value: 0, class: 'total' %>$
    </div>
    <a href="#" class="item-add">Add item</a>
  </div>
  <a href="#" class="vendor-remove">Remove vendor</a>

  <%= f.hidden_field :id %>
  <%= f.hidden_field :_destroy %>
  </td></tr></table>
</div>